# Packt Publishing Video Downloader - Environment Variables

# Your Packt Publishing account credentials
PACKT_EMAIL="your_email@example.com"
PACKT_PASSWORD="your_password"

# Playlist IDs (comma-separated for multiple playlists)
# These are numeric IDs from playlist URLs (e.g., https://subscription.packtpub.com/playlists/937831)
PACKT_PLAYLIST_IDS=""

# Directory to save courses (default is ./downloads)
OUTPUT_DIRECTORY="./downloads"

# Displays the browser window (true or false, default is false)
# Set to true for debugging or watching the process
WATCH="false"
